html
  include head.pug
  
  body(class="text-center" id="create-event")
    form(method="post" action="/calendar/events/create")
            div(class="form-group")
                label(class="titlefield" for="eventtitle") 
                    h3 Event Title
                input(type='text' class="form-control" name = "eventtitle" id = "eventtitle")  

            div(class="form-group")
                label(class="titlefield" for="amount") 
                    h3 Amount
                input(type='number' min="0.01" step="0.01" value="0.00" class="form-control" name = "amount" id = "amount")  
            div
                button(type="submit" class="btn btn-default" id="submitBtn") Create Bill
                  
  include footer.pug
          
  
